{
  "name": "@commerce/backend",
  "version": "1.0.0",
  "description": "E-Commerce Platform - Clean Architecture Backend",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "ts-node-dev --respawn src/main.ts",
    "test": "jest --forceExit --detectOpenHandles",
    "test:unit": "jest --testPathPattern='\\.test\\.ts$' --testPathIgnorePatterns=integration",
    "test:integration": "jest --testPathPattern='integration\\.test\\.ts$'",
    "test:watch": "jest --watch --onlyChanged",
    "test:coverage": "jest --coverage --forceExit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "migrate:create": "typeorm migration:create",
    "migrate:up": "typeorm migration:run",
    "migrate:down": "typeorm migration:revert",
    "seed:roles": "ts-node scripts/seed/seed-roles.ts",
    "seed:permissions": "ts-node scripts/seed/seed-permissions.ts",
    "seed:gst-slabs": "ts-node scripts/seed/seed-gst.ts",
    "seed:platform-config": "ts-node scripts/seed/seed-config.ts",
    "seed:super-admin": "ts-node scripts/seed/seed-super-admin.ts"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.1.2",
    "pg": "^8.11.3",
    "pg-promise": "^11.5.4",
    "redis": "^4.6.12",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typeorm": "^0.3.17",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
