# .env.example - Copy to .env and fill in values

# Environment
NODE_ENV=development

# ========================================
# Database Configuration
# ========================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ecommerce_db
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres_password_here

# Database connection pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ========================================
# Security & Encryption
# ========================================

# Master encryption key (auto-generated by bootstrap if not set)
# Format: 12-character string (minimum 128 bits entropy)
ENCRYPTION_MASTER_KEY=

# JWT Secrets (auto-generated by bootstrap if not set)
JWT_SECRET=
JWT_REFRESH_SECRET=

# JWT Token Expiry
JWT_ACCESS_TOKEN_EXPIRY_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRY_DAYS=7

# ========================================
# Admin Account (for bootstrap)
# ========================================
ADMIN_EMAIL=admin@commerce.local
ADMIN_PASSWORD=

# ========================================
# API Configuration
# ========================================
API_PORT=3001
API_HOST=localhost
API_BASE_URL=http://localhost:3001

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004

# ========================================
# Payment Gateway (Sandbox Only)
# ========================================
PAYMENT_PROVIDER=stripe_sandbox
PAYMENT_API_KEY=pk_test_xxxxx
PAYMENT_WEBHOOK_SECRET=whsec_test_xxxxx
PAYMENT_TIMEOUT_MINUTES=30

# ========================================
# Frontend Configuration
# ========================================
REACT_APP_API_URL=http://localhost:3001/api/v1
REACT_APP_UPLOAD_URL=http://localhost:3001/api/v1/uploads

# ========================================
# Logging
# ========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ========================================
# Features
# ========================================
ENABLE_2FA=true
ENABLE_IMPERSONATION=true
ENABLE_AUDIT_LOGGING=true
MAX_IMPERSONATION_DURATION_MINUTES=240

# ========================================
# Session & Auto-Timeout
# ========================================
SESSION_TIMEOUT_MINUTES=30
REFRESH_TOKEN_ROTATION_ENABLED=true

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
LOGIN_RATE_LIMIT_ATTEMPTS=5
LOGIN_RATE_LIMIT_WINDOW_MINUTES=15

# ========================================
# Email (if notifications needed)
# ========================================
# EMAIL_SERVICE=smtp
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your@email.com
# EMAIL_PASSWORD=your_password

# ========================================
# Secrets Vault (for production)
# ========================================
