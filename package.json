{
  "name": "commerce-platform",
  "version": "1.0.0",
  "description": "Enterprise E-Commerce Platform - Production Ready",
  "scripts": {
    "bootstrap": "bash scripts/bootstrap.sh",
    "bootstrap:dev": "NODE_ENV=development bash scripts/bootstrap.sh",
    "bootstrap:prod": "NODE_ENV=production bash scripts/bootstrap.sh",
    "backend:dev": "cd backend && npm run dev",
    "backend:build": "cd backend && npm run build",
    "backend:test": "cd backend && npm run test:coverage",
    "frontend:dev": "concurrently \"cd frontend/host-shell && npm start\" \"cd frontend/auth-mfe && npm start\" \"cd frontend/product-mfe && npm start\" \"cd frontend/cart-mfe && npm start\" \"cd frontend/order-mfe && npm start\" \"cd frontend/seller-mfe && npm start\" \"cd frontend/admin-mfe && npm start\"",
    "lint": "npm run lint --prefix backend && npm run lint --prefix frontend/host-shell",
    "test": "npm run test --prefix backend",
    "test:coverage": "npm run test:coverage --prefix backend",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build"
  },
  "workspaces": [
    "backend",
    "frontend/host-shell",
    "frontend/auth-mfe",
    "frontend/product-mfe",
    "frontend/cart-mfe",
    "frontend/order-mfe",
    "frontend/seller-mfe",
    "frontend/admin-mfe",
    "frontend/shared"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "ecommerce",
    "platform",
    "clean-architecture",
    "microservices",
    "gst",
    "rbac",
    "audit-logs"
  ]
}
